

{
  "name": "Chronotium",
  "version": "1.0.1",
  "description": "Basic note extension",
  "background_page": "background.html",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
 "content_scripts": [ {
      "js": [ "script.js" ],
      "matches": [ "http://*/*", "https://*/*" ]
     }],
  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html"
  },
"icons": { "16": "icon16.png",
		"32": "icon32.png",
           "48": "icon48.png",
          "128": "icon128.png" }
}